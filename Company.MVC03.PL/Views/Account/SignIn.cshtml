@model SignInDTO
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div >
		<div asp-validation-summary="All"></div>
		<form asp-action="SignIn">
			<input class="text email" asp-for="Email" placeholder="Email" required>
			<input class="text" asp-for="Password" placeholder="Password" required>
			<div class="wthree-text">
				<label class="anim m-3">
					<input asp-for="RememberMe" class="checkbox" >
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>

		@*Sign In With Google *@	

		<a asp-action="GoogleLogin" style="display : block ; margin:0 auto ; text-align : center ; color : white ; width : 50% ">SignIn With Google</a>

		@*  Sing In with Facebook *@
		<br />
		 <a asp-action="FacebookLogin" style="display:block;margin:0 auto;text-align:center;color:white ;width:50% "> SignIn With Facebook</a> 
			<br />

		<p>Don't have an Account? <a asp-action="SignUp"> Create New Account :)</a></p>
		<br>
		<p> <a asp-action="ForgetPassword"> Forget Password ?</a></p>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
