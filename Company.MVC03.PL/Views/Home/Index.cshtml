<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- خطوط جوجل -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap" rel="stylesheet">
    <!-- أيقونات Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body style="
    font-family: 'Tajawal', sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
    min-height: 100vh;
    margin: 0;
    padding: 0;
">

    <div class="container" style="padding-top: 50px;">
        <!-- بطاقة الترحيب -->
        <div style="
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 40px;
        text-align: center;
    ">
            <h1 style="color: #2c3e50; margin-bottom: 20px;">
                <i class="fas fa-home" style="margin-left: 10px;"></i>
                Welcome to Company System
            </h1>
            <p style="color: #7f8c8d; font-size: 1.1rem;">
                Manage your employees, departments and user roles efficiently
            </p>
        </div>

        <!-- بطاقات الخدمات -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
            <!-- بطاقة الأقسام -->
            <a asp-controller="Department" asp-action="Index" style="text-decoration: none;">
                <div style="
                background: white;
                border-radius: 12px;
                padding: 25px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s;
                text-align: center;
            " onmouseover="this.style.transform='translateY(-5px)'"
                     onmouseout="this.style.transform='translateY(0)'">
                    <div style="
                    background: #2ecc71;
                    width: 60px;
                    height: 60px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin: 0 auto 15px;
                    color: white;
                    font-size: 1.5rem;
                ">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3 style="color: #2c3e50;">Departments</h3>
                    <p style="color: #7f8c8d;">Organize company structure</p>
                </div>
            </a>
            <!-- بطاقة الموظفين -->
            <a asp-controller="Employee" asp-action="Index" style="text-decoration: none;">
                <div style="
                background: white;
                border-radius: 12px;
                padding: 25px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s;
                text-align: center;
            " onmouseover="this.style.transform='translateY(-5px)'"
                     onmouseout="this.style.transform='translateY(0)'">
                    <div style="
                    background: #3498db;
                    width: 60px;
                    height: 60px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin: 0 auto 15px;
                    color: white;
                    font-size: 1.5rem;
                ">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 style="color: #2c3e50;">Employees</h3>
                    <p style="color: #7f8c8d;">Manage all employees</p>
                </div>
            </a>

          

            <!-- بطاقة المستخدمين -->
            <a asp-controller="User" asp-action="Index" style="text-decoration: none;">
                <div style="
                background: white;
                border-radius: 12px;
                padding: 25px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s;
                text-align: center;
            " onmouseover="this.style.transform='translateY(-5px)'"
                     onmouseout="this.style.transform='translateY(0)'">
                    <div style="
                    background: #e74c3c;
                    width: 60px;
                    height: 60px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin: 0 auto 15px;
                    color: white;
                    font-size: 1.5rem;
                ">
                        <i class="fas fa-user-cog"></i>
                    </div>
                    <h3 style="color: #2c3e50;">Users</h3>
                    <p style="color: #7f8c8d;">Manage system users</p>
                </div>
            </a>
        </div>
    </div>

</body>
</html>