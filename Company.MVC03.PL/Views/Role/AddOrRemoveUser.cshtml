@model List<UsersInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;

}

<form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group form-check">
            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
            <label asp-for="@Model[i].IsSelected" class="form-check-label">
                @Model[i].UserName
            </label>
        </div>

        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <div class="d-flex mt-3">
        <input type="submit" value="Update" class="btn btn-success me-2" />
        <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>
    </div>

</form>
